{
    "manifest_version": 2,

    "name": "豆瓣电影助手",
    "description": "让豆瓣电影支持下载bt种子，同时能够结合迅雷会员一键云播。",
    "version": "2.2.7",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "clipboardWrite",
        "tabs",
        "cookies"
     ],
    "icons": {
        "128": "icon.png",
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png"
    },
    "web_accessible_resources": [
        "images/*.*",
        "inject/*.*",
        "private/*.*"
    ],
    "background": {
        "persistent": true,
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [{
        "matches": [
            "http://movie.douban.com/subject/*"
        ],
        "css":     ["bootstrap.css"],
        "js":      ["bootstrap.js"],
        "run_at":  "document_end"
    }, {
        "matches": [
            "http://198.2.210.57/*",
            "http://tantion.com/private/*"
        ],
        "css":     ["private.css"],
        "js":      ["private.js"],
        "run_at":  "document_end"
    }]
}
